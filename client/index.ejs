<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

    <link rel="stylesheet" href="style.css">

    <title>Reload, Shoot, Block!</title>
</head>
<body>
    <% if (typeof connectingTo !== 'undefined') {%>
        <input type="text" id="connectingTo" value="<%= connectingTo %>" hidden>
    <% } %>

    <div class="container">
        <div class="row title">
            <div class="col text-center">
                <h1>Reload, Shoot, Block!</h1>
            </div>
        </div>

        <div class="row createLobby">
            <div class="col text-center">
                <a href="#" class="btn btn-success" onclick="createLobby()">Create game</a>
            </div>
        </div>

        <div class="row lobby">
            <div class="col text-center">
                <form action="">
                    <div class="input-group">
                        <input type="text" class="form-control" id="lobbyID" value="AAAA">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <a href="#" class="btn btn-default copyLobbyCode" data-clipboard-target="#lobbyID">Copy</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="game">
            <div class="row">
                <div class="col">
                    <h1 class="text-center"><span id="player1Score"></span>-<span id="player2Score"></span></h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h2 class="text-center">Bullets: <span id="bullets"></span></h2>
                </div>
            </div>

            <div class="row text-center buttons">
                <div class="col"><button type="button" id="reloadBtn" class="btn btn-danger" onclick="sendMove('reload')">Reload</button></div>
                <div class="col"><button type="button" id="shootBtn" class="btn btn-success" onclick="sendMove('shoot')">Shoot</button></div>
                <div class="col"><button type="button" id="blockBtn" class="btn btn-primary" onclick="sendMove('block')">Block</button></div>
            </div>

            <div class="row waiting">
                <div class="col">
                    <h3 class="text-center"><em>Waiting for opponent's move...</em></h3>
                </div>
            </div>

            <div class="row results">
                <div class="col">
                    <h3 class="text-center" id="result"></h3>
                    <h4 class="text-center"><em>
                            (Player 1 used <span id="player1Choice"></span>,
                            Player 2 used <span id="player2Choice"></span>)
                    </em></h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

    <script src="script.js"></script>
</body>
</html>